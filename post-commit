#!/bin/bash

CHANGELOG_CMD="generate-changelog"

# Run the command to update the changelog file
echo "Running post-commit hook to update CHANGELOG.md..."
# We run the command and pipe output to the file or just run the existing hook command
# (Assuming 'generate-changelog' handles file writing internally based on your output)
$CHANGELOG_CMD

# Check if the command was successful
if [ $? -eq 0 ]; then
    echo "✅ CHANGELOG.md updated successfully."
    echo "➡️ Remember to run 'git add CHANGELOG.md' and commit the changes next."
else
    echo "❌ Changelog generation failed during 'make changelog'."
fi

exit 0
exit 0
